{
  "name": "multiai",
  "version": "1.2.10",
  "description": "Centro de asistentes de inteligencia artificial",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:linux:deb": "electron-builder --linux deb",
    "build:linux:snap": "electron-builder --linux snap",
    "build:linux:appimage": "electron-builder --linux AppImage",
    "build:linux:flatpak": "electron-builder --linux flatpak",
    "buidl:linux:flatpak2": "DEBUG=flatpak-bundler* npm run build:linux:flatpak",
    "build:linux:all": "electron-builder --linux",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac"
  },
  "author": "StormGamesStudios",
  "homepage": "https://github.com/acierto-incomodo/MultiAI",
  "license": "MIT",
  "dependencies": {
    "electron-log": "^5.4.3",
    "electron-updater": "^6.3.9"
  },
  "devDependencies": {
    "electron": "^40.0.0",
    "electron-builder": "^26.4.0"
  },
  "build": {
    "appId": "com.stormgamesstudios.multiai",
    "productName": "MultiAI",
    "extraResources": [
      {
        "from": "assets/images",
        "to": "icons",
        "filter": ["*.ico"]
      }
    ],
    "publish": [
      {
        "provider": "github",
        "owner": "acierto-incomodo",
        "repo": "MultiAI"
      }
    ],
    "files": [
      "main.js",
      "preload.js",
      "assets/**/*",
      "node_modules/**/*",
      "index.html",
      "build/**/*",
      "shortcuts.html",
      "updates.html"
    ],
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "assets/icons/icon.ico"
    },
    "nsis": {
      "oneClick": true,
      "allowToChangeInstallationDirectory": false,
      "createDesktopShortcut": true,
      "include": "installer.nsh",
      "differentialPackage": true
    },
    "linux": {
      "target": [
        "deb",
        "snap",
        "AppImage",
        "flatpak"
      ],
      "icon": "assets/icons/",
      "category": "Utility",
      "maintainer": "StormGamesStudios <meliodas.aitor@gmail.com>",
      "vendor": "StormGamesStudios",
      "synopsis": "Aplicaci√≥n de asistentes de IA",
      "description": "Centro de asistentes de inteligencia artificial",
      "desktop": {
        "entry": {
          "Name": "MultiAI",
          "Comment": "Centro de asistentes de inteligencia artificial",
          "Keywords": "ai;assistant;chatgpt;claude;gemini;",
          "Categories": "Network;Utility;"
        }
      }
    },
    "deb": {
      "depends": [
        "libgtk-3-0",
        "libnotify4",
        "libnss3",
        "libxss1",
        "libxtst6",
        "xdg-utils"
      ]
    },
    "snap": {
      "grade": "stable",
      "confinement": "strict",
      "plugs": [
        "network",
        "network-bind",
        "desktop",
        "desktop-legacy",
        "wayland",
        "x11",
        "browser-support"
      ]
    },
    "appImage": {
      "artifactName": "MultiAI-${version}-${arch}.${ext}"
    },
    "flatpak": {
      "runtime": "org.freedesktop.Platform",
      "runtimeVersion": "23.08",
      "sdk": "org.freedesktop.Sdk",
      "base": "org.electronjs.Electron2.BaseApp",
      "baseVersion": "23.08",
      "finishArgs": [
        "--share=network",
        "--socket=x11",
        "--socket=wayland",
        "--device=dri",
        "--filesystem=home"
      ]
    }
  }
}
